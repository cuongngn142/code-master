<!-- Thêm link CSS -->
<link rel="stylesheet" href="/css/header.css">
<!-- Thêm Font Awesome cho icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="main-content">
  <div class="body">
    <!-- logo -->
    <img src="./images/img/logo-web.png" alt="logo" />
    <!-- Navbar -->
    <nav class="navbar">
      <ul>
        <li class="active"><a href="#!">Trang Chủ</a></li>
        <li><a href="#!">Luyện Tập</a></li>
        <li><a href="#!">Khóa Học</a></li>
        <li><a href="#!">Thử Thách</a></li>
        <li><a href="#!">Xếp Hạng</a></li>
        <li><a href="#!">Blog</a></li>
      </ul>
    </nav>
    <!-- Auth buttons -->
    <% if (user) { %>
      <div class="user-profile">
        <button class="profile-btn" id="profileBtn">
          <div class="avatar-container">
            <img src="<%= user.Avatar || './images/img/avatar-default.png' %>" alt="avatar" class="avatar" />
          </div>
          <span class="user-name"><%= user.HoTen %></span>
        </button>
        <ul class="profile-dropdown" id="profileDropdown">
          <li><a href="/profile"><i class="fas fa-user-circle"></i> Hồ sơ</a></li>
          <li><a href="/settings"><i class="fas fa-cog"></i> Cài đặt</a></li>
          <li><a href="#" id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a></li>
        </ul>
      </div>
    <% } else { %>
      <button class="open-modal-btn">
        <i class="fas fa-user"></i>
        <span>Đăng nhập</span>
      </button>
    <% } %>
  </div>
</div>

<script>
// Toggle dropdown menu
const profileBtn = document.getElementById('profileBtn');
const profileDropdown = document.getElementById('profileDropdown');

profileBtn.addEventListener('click', (e) => {
  e.stopPropagation();
  profileDropdown.classList.toggle('active');
});

// Close dropdown when clicking outside
document.addEventListener('click', (e) => {
  if (!profileDropdown.contains(e.target) && !profileBtn.contains(e.target)) {
    profileDropdown.classList.remove('active');
  }
});

// Logout handler
document.getElementById('logoutBtn').addEventListener('click', async (e) => {
  e.preventDefault();
  try {
    const response = await fetch('/auth/logout');
    if (response.ok) {
      window.location.href = '/';
    }
  } catch (error) {
    console.error('Lỗi đăng xuất:', error);
  }
});
</script>
